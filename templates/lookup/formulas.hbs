<section class="attributes">
  <fieldset>
    <legend>{{localize "DND.DIALOG.ATTRIBUTES"}}</legend>
    <div class="form-group">
      <label>{{localize "DND.DIALOG.SELECT_ATTRIBUTE"}}</label>
      <div class="form-fields">
        <select name="attributePath">
          <option value="">{{localize "DND.DIALOG.PLACEHOLDER"}}</option>
          {{#each trackableOptions}}
          <option value="{{this.value}}" {{#if (eq ../attributePath.value this.value)}}selected{{/if}}>
            {{this.label}}
          </option>
          {{/each}}
        </select>
      </div>
    </div>
  </fieldset>
</section>