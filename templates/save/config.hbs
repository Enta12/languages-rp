<fieldset>
  <div class="form-group">
    <label>{{localize "DND.DIALOG.DC"}}</label>
    <div class="form-fields">
      {{ formInput dc.field value=dc.value name="dc" type="number" }}
    </div>
  </div>

  <div class="form-group">
    <label>{{localize "DND.SETTINGS.FORMAT.TITLE"}}</label>
    <div class="form-fields">
      <select id="format" name="format">
        <option value="short" {{#if (eq format.value "short" )}}selected{{/if}}>{{localize "DND.SETTINGS.FORMAT.SHORT"}}
        </option>
        <option value="long" {{#if (eq format.value "long" )}}selected{{/if}}>{{localize "DND.SETTINGS.FORMAT.LONG"}}
        </option>
      </select>
    </div>
  </div>

  <div class="form-group">
    <label>{{localize "DND.DIALOG.CONCENTRATION"}}</label>
    <div class="form-fields">
      <input type="checkbox" name="useConcentration" {{#if useConcentration.value}}checked{{/if}}>
    </div>
  </div>

  <div class="form-group">
    <label>{{localize "DND.DIALOG.COMBINATION"}}</label>
    <button class="flex0" type="button" data-action="addSave">
      <i class="fa-solid fa-plus"></i>
    </button>
  </div>
</fieldset>