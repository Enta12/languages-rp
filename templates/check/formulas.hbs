<section class="checks">
  <fieldset>
    <legend>{{localize "DND.DIALOG.CHECK.TYPES"}}</legend>
    {{#each checks}}
    {{#if rule}}
    <hr>
    {{/if}}
    <div class="form-group">
      <div class="form-fields">
        <select name="checks.{{idx}}.type">
          <optgroup label="{{localize "DND.DIALOG.CHECK.ABILITIES"}}">
            {{#each ../abilities}}
            <option value="{{@key}}" {{#if (eq ../type.value @key)}}selected{{/if}}>{{this.label}}</option>
            {{/each}}
          </optgroup>
          <optgroup label="{{localize "DND.DIALOG.CHECK.SKILLS"}}">
            {{#each ../skills}}
            <option value="{{@key}}" {{#if (eq ../type.value @key)}}selected{{/if}}>{{this.label}}</option>
            {{/each}}
          </optgroup>
<optgroup label="{{localize "DND.DIALOG.CHECK.TOOLS"}}">
  {{#each ../tools}}
  <option value="{{@key}}" {{#if (eq ../type.value @key)}}selected{{/if}}>{{this}}</option>
  {{/each}}
</optgroup>
        </select>
      </div>
      <div class="controls flex0">
        <button type="button" data-action="deleteCheck" data-idx="{{idx}}" data-tooltip="DND.DIALOG.CHECK.DELETE">
          <i class="fa-solid fa-trash"></i>
        </button>
      </div>
    </div>
    {{/each}}
  </fieldset>
</section>