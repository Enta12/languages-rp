<div class="dialog-form">
  <!-- Première formule -->
  <div class="form-group">
    <label>{{localize "DND.DIALOG.DAMAGE.FORMULA_PRIMARY"}}</label>
    <input type="text" name="formulaPrimary" value="1d6" autocomplete="off">
  </div>
  <div class="form-group">
    <label>{{localize "DND.DIALOG.DAMAGE.TYPE_PRIMARY"}}</label>
    <select name="damageTypePrimary">
      {{#each damageTypes}}
        <option value="{{@key}}">{{this.label}}</option>
      {{/each}}
    </select>
  </div>

  <!-- Sélecteur de combinaison -->
  <div class="form-group">
    <label>{{localize "DND.DIALOG.DAMAGE.COMBINATION"}}</label>
    <select name="combination" id="combination-selector">
      <option value="none">{{localize "DND.DIALOG.DAMAGE.COMBINATION_NONE"}}</option>
      <option value="or">{{localize "DND.DIALOG.DAMAGE.COMBINATION_OR"}}</option>
      <option value="and">{{localize "DND.DIALOG.DAMAGE.COMBINATION_AND"}}</option>
    </select>
  </div>
  
  <!-- Seconde formule -->
  <div class="form-group">
    <label>{{localize "DND.DIALOG.DAMAGE.FORMULA_SECONDARY"}}</label>
    <input type="text" name="formulaSecondary" value="1d6" autocomplete="off">
  </div>
  <div class="form-group">
    <label>{{localize "DND.DIALOG.DAMAGE.TYPE_SECONDARY"}}</label>
    <select name="damageTypeSecondary">
      {{#each damageTypes}}
        <option value="{{@key}}">{{this.label}}</option>
      {{/each}}
    </select>
  </div>
  
  <!-- Option moyenne -->
  <div class="form-group">
    <label>{{localize "DND.DIALOG.DAMAGE.AVERAGE"}}</label>
    <select name="average">
      <option value="false">{{localize "DND.DIALOG.DAMAGE.USE_DICE"}}</option>
      <option value="true">{{localize "DND.DIALOG.DAMAGE.USE_AVERAGE"}}</option>
    </select>
  </div>
</div>